{
  "name": "vscode-octopusdeploy",
  "displayName": "Octopus Deploy",
  "description": "Syntax highlighting for Octopus Deploy",
  "version": "0.0.1-development",
  "publisher": "Octopus Deploy",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:ocl",
    "workspaceContains:**/*.ocl"
  ],
  "main": "./out/extension.js",
  "private": true,
  "contributes": {
    "languages": [
      {
        "aliases": ["Octopus Configuration Language", "ocl"],
        "configuration": "./language-configuration.json",
        "extensions": [".ocl .octo"],
        "id": "ocl"
      }
    ],
    "grammars": [
      {
        "language": "ocl",
        "scopeName": "scope.ocl",
        "path": "./syntaxes/ocl.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "ocl",
        "path": "./snippets/snippets.code-snippets"
      }
    ]
  },
  "icon": "./assets/icons/octopus-deploy.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/OctopusDeploy/vscode-octopusdeploy"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.2",
    "typescript": "^4.4.3",
    "@vscode/test-electron": "^1.6.2"
  }
}
